<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/country_name_width"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/wrapLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="@dimen/country_name_width"
            android:layout_height="@dimen/text_field_size"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/city_name"
                android:layout_width="@dimen/city_name_width"
                android:layout_height="@dimen/text_field_size"
                android:gravity="top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.526" />

            <TextView
                android:id="@+id/iata_name"
                android:layout_width="@dimen/iata_name_width"
                android:layout_height="@dimen/text_field_size"
                android:layout_marginStart="@dimen/iata_name_margin_start"
                android:gravity="top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/city_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.526" />

        </LinearLayout>

        <TextView
            android:id="@+id/country_name"
            android:layout_width="@dimen/country_name_width"
            android:layout_height="@dimen/text_field_size"
            android:gravity="top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.526" />
    </LinearLayout>

</LinearLayout>